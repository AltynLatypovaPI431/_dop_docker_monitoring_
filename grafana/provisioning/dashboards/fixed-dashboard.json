{
  "dashboard": {
    "title": "Docker Monitoring (Fixed)",
    "panels": [
      {
        "id": 1,
        "title": "CPU Usage - ALL Containers",
        "type": "timeseries",
        "targets": [{
          "expr": "rate(container_cpu_usage_seconds_total[1m]) * 100",
          "legendFormat": "{{id}}"
        }],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0
          }
        }
      },
      {
        "id": 2,
        "title": "Memory Usage - ALL Containers",
        "type": "timeseries",
        "targets": [{
          "expr": "container_memory_usage_bytes",
          "legendFormat": "{{id}}"
        }],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "min": 0
          }
        }
      },
      {
        "id": 3,
        "title": "Container Count",
        "type": "stat",
        "targets": [{
          "expr": "count(container_memory_usage_bytes)",
          "legendFormat": "Containers"
        }],
        "gridPos": {"h": 4, "w": 12, "x": 0, "y": 8}
      }
    ],
    "time": {
      "from": "now-5m",
      "to": "now"
    },
    "refresh": "10s"
  },
  "overwrite": true
}
